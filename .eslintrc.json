{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "plugins": [
    "simple-import-sort",
    "vue"
  ],
  "rules": {
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "indent": [
      "warn",
      2
    ],
    "max-len": [
      "warn",
      {
        "code": 110,
        "tabWidth": 2
      }
    ],
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "simple-import-sort/imports": "warn",
    "simple-import-sort/exports": "warn",
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "warn",
      "always"
    ]
  }
}
